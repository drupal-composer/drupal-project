{
  "extends": "eslint-config-airbnb-base/legacy",
  "plugins": [
    "import"
  ],
  "root": true,
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "domready": true,
    "jQuery": true,
    "Plyr": true,
    "matchMedia": true,
    "Foundation": true
  },
  "rules": {
    "consistent-return": [0],
    "no-underscore-dangle": [0],
    "max-nested-callbacks": [1, 3],
    "import/no-mutable-exports": [1],
    "no-plusplus": [1, {
      "allowForLoopAfterthoughts": true
    }],
    "no-param-reassign": [0],
    "no-prototype-builtins": [0],
    "valid-jsdoc": [1, {
      "prefer": {
        "returns": "return",
        "property": "prop"
      },
      "requireReturn": false
    }],
    "brace-style": ["error", "stroustrup"],
    "no-unused-vars": [1]
  }
}
