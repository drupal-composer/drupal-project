{
    "name": "pfrenssen/drupal-project",
    "description": "Project template for Drupal 8 projects with Composer, Phing and Behat",
    "type": "project",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "",
            "role": ""
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packagist.drupal-composer.org"
        }
    ],
    "require": {
        "composer/installers": "^1.0.20",
        "drupal/console": "dev-master",
        "drupal/core": "8.0.*",
        "drush/drush": "dev-master",
        "php": ">=5.5.9"
    },
    "require-dev": {
        "behat/mink": "~1.6",
        "behat/mink-goutte-driver": "~1.2",
        "drupal/coder": "dev-8.x-2.x",
        "drupal/config_update": "8.1.*@dev",
        "drupal/devel": "8.1.*@dev",
        "drupal/drupal-extension": "~3.0",
        "drupal/phing-drush-task": "~1.0",
        "jcalderonzumba/gastonjs": "^1.1@dev",
        "jcalderonzumba/mink-phantomjs-driver": "dev-master#10d7c48c9a4129463052321b52450d98983c4332",
        "mikey179/vfsStream": "~1.2",
        "phing/phing": "~2.10",
        "symfony/css-selector": "2.7.*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Drupal\\DrupalProject\\": "tests/src",
            "DrupalProject\\": "src"
        }
    },
    "scripts": {
        "post-install-cmd": "sh ./scripts/composer/post-install.sh"
    },
    "extra": {
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"]
        }
  },
  "repositories": [
      {
          "type": "composer",
          "url": "https://packagist.drupal-composer.org"
      },
      {
          "type": "vcs",
          "url": "http://git.drupal.org/project/coder.git"
      },
      {
          "type": "package",
          "package": {
              "name": "drupal/phing-drush-task",
              "version": "1.2",
              "source": {
                  "url": "http://git.drupal.org/project/phingdrushtask.git",
                  "type": "git",
                  "reference": "7.x-1.2"
              },
              "autoload": { "classmap": [ "DrushTask.php" ] },
              "include-path": [ "." ]
          }
      }
  ]
}
